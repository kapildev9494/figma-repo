{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES2020",
    "lib": ["es2017", "es7", "es6", "ES2019", "ES2020"],
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}