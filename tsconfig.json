{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "module": "ES2020",
    "lib": ["ES2019", "ES2020"],
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx"],
}